<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd
        ">

    <changeSet id="accounts-initial" author="klenkes74">
        <comment>The initial data base tables.</comment>

        <createTable tableName="ACCOUNTS">
            <column name="ID_" type="VARCHAR(40)">
                <constraints nullable="false"
                             primaryKey="true" primaryKeyName="TENANTS_PK"/>
            </column>

            <column name="VERSION_" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="TENANT_" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>

            <column name="_CREATED_" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="_MODIFIED_" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>


            <column name="NAME_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="ACCOUNTS_TENANT_IDX" tableName="ACCOUNTS">
            <column name="TENANT_"/>
        </createIndex>

        <createIndex indexName="ACCOUNTS_NAME_UK" unique="true" tableName="ACCOUNTS">
            <column name="TENANT_"/>
            <column name="NAME_"/>
        </createIndex>


        <loadData tableName="ACCOUNTS" file="../data/ACCOUNTS.csv" relativeToChangelogFile="true" encoding="UTF-8"
                  quotchar="&quot;" separator=";"/>


        <rollback>
            <dropIndex indexName="ACCOUNTS_NAME_UK"
                       tableName="ACCOUNTS"/>
        </rollback>
        <rollback>
            <dropIndex indexName="ACCOUNTS_TENANT_IDX"
                       tableName="ACCOUNTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="ACCOUNTS"/>
        </rollback>
    </changeSet>
</databaseChangeLog>